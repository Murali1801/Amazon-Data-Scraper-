{
  "manifest_version": 3,
  "name": "Amazon Data Scraper",
  "version": "1.0",
  "description": "Copies product data from an Amazon page to the clipboard in a specific format.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/amazon16.png",
      "48": "images/amazon48.png",
      "128": "images/amazon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.amazon.in/*", "*://www.amazon.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/amazon16.png",
    "48": "images/amazon48.png",
    "128": "images/amazon128.png"
  }
}

